{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
{% if particle.items|length > 0 %}

<div class='carousel-container' style='max-height:{{particle.height|e}};height:{{particle.height|e}};'>
{% set n = 0 %}
{% for item in particle.items %}
	<div {% if item.image %}style='height:{{particle.height|e}};background-image: url({{ item.image|e }});'{% endif %} class='carousel-item {% if n==0 %}slide-show{% else %}slide-hide{% endif %}'>
	<div class='content'>
	<div class='inside {{ item.variations }}'>{{ item.html|html|raw }}
	{% if item.url %}
	<div class='carousel-button'><a class="button primary" href="{{item.url|url}}">{{item.button}}</a></div>
	{% endif %}
	</div></div>
	</div>
	{% set n = +1 %}
{% endfor %}

<div class='carousel-ctl'>  
  <a class="prev" onclick="plusSlides(-1, {{ particle.delay }})">&#10094;</a>
  <a class="next" onclick="plusSlides(1, {{ particle.delay }})">&#10095;</a>
</div>
  
</div>

<div class="carousel-dot">

{% set n = 0 %}
{% for item in particle.items %}
  <span class="dot" onclick="currentSlide({{n}} , {{ particle.delay }})"></span>
  {% set n = n+1 %}
{% endfor %}

</div>

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="gantry-theme://gasken/slider.css" /> 
{% endblock %}
{% block javascript_footer %}
    <script src="{{ url('gantry-theme://gasken/slider.js') }}"></script>
{% endblock %}  

{% set slider_inject %}
showSlides(0, {{ particle.delay }});
{% endset %}

{% do gantry.document.addInlineScript(slider_inject, 0, 'footer') %}

{% endif %}
{% endblock %}

